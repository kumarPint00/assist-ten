# AI Learning Assessment Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=assist_ten_db
DB_USER=postgres
DB_PASSWORD=postgres
# DATABASE_URL will be auto-constructed from above if not set

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# MinIO/S3 Configuration
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=learning-app-docs
S3_REGION=us-east-1
S3_USE_SSL=false

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure AD SSO (Required for production)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_REDIRECT_URI=http://localhost:8000/api/v1/auth/sso/azure/callback

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@learningapp.com
SMTP_FROM_NAME=AI Learning App

# AI/ML Configuration
GROQ_API_KEY=
MAX_QUESTIONS_PER_TEST=20
QUESTION_GENERATION_TIMEOUT=300

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Sentry Monitoring (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Admin Configuration
ADMIN_EMAILS=admin@assist-ten.com,pintu@assist-ten.com

# Test Configuration
TEST_DURATION_MINUTES=30
QUESTION_TIMEOUT_SECONDS=30
SCORE_RELEASE_DELAY_HOURS=24